<% provide(:title, 'Adding event') %>
<h1>Add event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, size: '20x7' %>

      <%= f.submit "Add new event", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

