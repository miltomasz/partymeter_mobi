<% provide(:title, 'Adding city') %>
<h1>Add city</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@city) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%= f.submit "Add new city", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

