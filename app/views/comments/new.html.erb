<!-- Modal -->
<div id="myModal" class="modal" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-header">
    <h3 id="myModalLabel">Add comment</h3>
  </div>

  <%= form_for(@comment) do |f| %>
    <div class="modal-body">
      <%= f.object.errors.full_messages %>
      <%= render 'shared/error_messages', object: f.object %>
        
      <div class="field"> 
          <%= f.label :author %>
          <%= f.text_field :author %>
          
          <%= f.label :content %>
          <%= f.text_area :content, placeholder: "Compose new comment..." %>
        
          <%= f.hidden_field :event_id, value: @comment.event.id %>  
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= link_to "Close", city_club_path(@comment.event.club.city, @comment.event.club), class: "btn"%>
      <%= f.submit "Add comment", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>