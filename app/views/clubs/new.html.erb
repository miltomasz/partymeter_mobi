<% provide(:title, 'Adding club') %>
<h1>Add club</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for([@city, @club]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :description %>
      <%= f.text_area :description, size: '20x7' %>

      <%= f.submit "Add new club", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

